{
  "coveragePathIgnorePatterns": [
    "node_modules",
    ".module.ts",
    ".factory.ts",
    "main.ts",
    "src/common/migrations"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "modulePaths": [
    "."
  ],
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "rootDir": "src",
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
